/* index/index.wxss */
@import "../../lib/app.wxss";

.chapter-center {
  height:81vh;
}

.scroll {
  overflow:auto;
}

.title {
  align-self:center;
  padding-bottom:20px;
  padding-top:20px;
  font-size:23px;
}

.chapter {
  flex-direction: column;
}

.center {
  flex-direction:column;
  text-overflow:ellipsis;
  width:75vw;
  min-height: 90rpx;
  margin-bottom:15rpx;
  margin-top:15rpx;
  align-self: center;
}

hr {
  border:none;
  border-top:1px dotted rgb(0, 0, 0);
  color:#fff;
  background-color:#fff;
  height:1px;
}

.num {
  font-size:15px;
}

.poem-list {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 19px;
  padding-left: 5px;
  padding-right: 5px;
}

.highlight {
  color:rgb(138, 122, 67);
  padding-left: 20px;
  font-size: 15px;
}

.label {
  width:5px;
  height:5px;
  background-color:black;
  border-radius:50%;
  position:relative;
  top:15px;
  right:7px;
}

#poems-page-ad {
  margin-bottom: 30px;
  position: fixed;
  bottom: 0;
}